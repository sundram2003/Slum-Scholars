{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"], 
      "*": ["node_modules/*"]
    }
  },
  "include": ["**/*.ts", "server/index.js", "server/db.js"],
  "exclude": ["node_modules"]
}
